<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 台股智能分析</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- 自訂CSS -->
    <link href="~/css/stock-style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><i class="fas fa-chart-line me-2"></i>台股智能分析</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fas fa-home me-1"></i>首頁</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Stock")"><i class="fas fa-search me-1"></i>個股查詢</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-list me-1"></i>排行榜</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-newspaper me-1"></i>市場資訊</a>
                    </li>
                </ul>

                <!-- Search Box -->
                <form class="d-flex" action="@Url.Action("Detail", "Stock")" method="get">
                    <input class="form-control me-2 search-box" type="search" placeholder="輸入股票代號" name="id" id="stockSearch">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    @RenderBody()

    <!-- Footer -->
    <footer class="footer-custom py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>台股智能分析</h5>
                    <p class="mb-0">提供專業的台股資訊分析服務</p>
                </div>
                <div class="col-md-3">
                    <h6>快速連結</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none">關於我們</a></li>
                        <li><a href="#" class="text-light text-decoration-none">服務條款</a></li>
                        <li><a href="#" class="text-light text-decoration-none">隱私政策</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>聯絡我們</h6>
                    <p class="mb-1"><i class="fas fa-envelope me-2"></i>info@stockanalysis.com</p>
                    <p class="mb-0"><i class="fas fa-phone me-2"></i>(02) 1234-5678</p>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center">
                <p class="mb-0">&copy; 2024 台股智能分析. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- ECharts -->
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.4.3/dist/echarts.min.js"></script>
    <!-- 自訂JavaScript -->
    <script src="~/js/KLineChart.js"></script>
    <script src="~/js/RealtimePrice.js"></script>
    <script src="~/js/StockBasicInfo.js"></script>
    <script src="~/js/utils.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>